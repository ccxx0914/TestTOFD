<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/file_system"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="文件系统"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/add_on_function"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="辅助功能"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/parameter_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="参数设置"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/tofd_scan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TOFD扫查"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top_bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#726bf1"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/second_file_system"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="文件系统"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/second_first_menu"/>

    <Button
        android:id="@+id/data_manage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="数据管理"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/data_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="数据分析"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/local_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="本机设置"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top"/>

    <Button
        android:id="@+id/local_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="本机信息"
        android:textSize="36sp"
        android:textColor="#fff"
        android:background="@drawable/button_top_bottom"/>

</LinearLayout>